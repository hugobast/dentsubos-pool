<!DOCTYPE html>
<html>
  <head>
    <meta charset"utf-8">
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;">

    <link rel="stylesheet" href="/fonts/fonts.css">
    <link rel='stylesheet' href='/css/pool.css?1234' />

    <script src="/js/jquery.js"></script>
    <script src="/js/pool.js"></script>

    <script>
      $(function() {
        var socket = new WebSocket("ws://biblios.bos.ca:8806");

        socket.onmessage = function(message) {
          console.log(message.data);
          var data = JSON.parse(message.data);
          $('.pool-temp').html(data.temperature);
        }
      })      
    </script>

    <title>DBPool</title>
  </head>

  <body>
    <div id="rotate"></div>

    <div id="container">
      <div id="top">
        <div id="outside">
          <div id="condition">
            <img src="img/<%= @condition %>.png">
          </div>
          <div class="temperature">
            <span class="outside-temp"><%= @outside %></span>°
            <div class="scale">celsius</div>
          </div>

          <div class="scale"></div>
        </div>
      </div>
      <div id="bottom">
        <div id="pool">
          <div class="temperature">
            <span class="pool-temp"><%= @pool %></span>°
            <div class="scale">fahrenheit</div>
          </div>
        </div>
        <div id="logo">
          <img src="/img/logo.png">
        </div>
      </div>
    </div>
  </body>
</html>
